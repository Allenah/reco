<div class="friends">
  <h4><strong>Your friends<span class="colon-green"> :</span></strong></h4>
  <div class="row">
    <% @friends.each do |f| %>
    <div class="col-xs-12">
      <div class="friend">
        <div class="avatar" style="background-image: url('<%= cl_image_path f.photo %>')"></div>
        <div class="friend-body">
          <p><strong><%= f.first_name %> <%= f.last_name %></strong></p>
          <p><%= image_tag "r-logo1.png" %><span class="profile-stat-count"> <%= rand(5..20) %></span> Lists</p>
          <p><i class="fas fa-check-square"></i> <span class="profile-stat-count"> <%= rand(5..20) %></span> Done</p>
        </div>
        <div class="see-profile"><%= link_to "Profile", user_path(f), class:"btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

