<div class="friends">
  <h4><strong>Better with friends!</strong></h4>
  <div class="row">
    <% @friends.each do |f| %>
    <div class="col-xs-12">
      <div class="friend">
        <div class="avatar" style="background-image: url('<%= cl_image_path f.photo %>')"></div>
        <div class="friend-body">
          <p><strong><%= f.first_name %> <%= f.last_name %></strong></p>
          <p>20 Re:co's</p>
          <p>15 Done That</p>
       </div>
     </div>
     <%= link_to "see friend profile", friendships_path(@friendship) %>
   </div>
   <% end %>
 </div>
</div>

