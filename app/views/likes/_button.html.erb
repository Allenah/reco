
<% if current_user.liked?(item) %>
  <%= link_to list_item_like_path(item.list, item, current_user), remote: true, method: :delete, class: "liked" do %>
  <i class="fas fa-check-square like-but"></i>
  <% end %>
<% else %>
  <%= link_to list_item_likes_path(item.list, item, current_user), remote: true, method: :post do %>
  <i class="fas fa-check-square like-but"></i>
  <% end %>
<% end %>
