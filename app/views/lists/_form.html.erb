<%= simple_form_for(@list) do |f| %>
    <%= f.input :list_type, :label => "Type", collection: ['restaurants', 'movies', 'albums', 'mixed'], as: :select, prompt: 'Select list' %>
    <%= f.input :name, :label => "Title" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.association :tags, collection: Tag.all, include_blank: false, include_hidden: false %>
    <%= f.input :description, input_html: {maxlength: 200} %>
    <%= f.submit "Add list", class: "btn btn-primary" %>
<% end %>
