      <div class="col-xs-12">
        <div class="list-card" style="background-image: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url('<%= cl_image_path @list.photo %>')">
        </div>

        <div class="list-title">
          <h2> <%= @list.name %> </h2>
        </div>

        <div class="list-hashtags">
          <p><% @listtags.each do |l| %>
            <%= l.tag.name %>
          <% end %>
          </p>
        </div>

        <div class="list-avatar">
          <img class="avatar" src="" alt="">
        </div>
        <div class="list-edit-icon">
         <%= link_to edit_list_path(@list) do %>
         <i class="fas fa-pencil-alt"></i>
         <% end %>
        </div>
        <div class="list-delete-icon">
          <%= link_to list_path(@list), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>

        <div class="follow-btn btn btn-primary">
          Follow
        </div>

        <div class="list-description">
        <p><%= @list.description %> </p>
        </div>
      </div>
