
        <div class="list-header">
          <div class="list-banner" style="background-image:linear-gradient(135deg, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 11%,rgba(0,0,0,0) 26%,rgba(0,0,0,0) 34%,rgba(0,0,0,0.4) 74%,rgba(0,0,0,1) 100%), url('<%= cl_image_path @list.photo %>')">
          </div>
          <%= link_to user_path(@list.user), class:"link-profile" do %>
            <div class="avatar" style="background-image: url('<%= cl_image_path @list.user.photo %>')">
            </div>
            <% end %>

            <div class="list-text-lockup">

              <div class="list-title">
                <h3> <%= @list.name %> </h3>
                <% if user_signed_in? && current_user.id == @list.user.id %>
                  <%= render "lists/editicons" %>
                <% end %>
                <% if user_signed_in? && current_user.id != @list.user.id %>
                  <%= div_for(@list, class: "follow-btn-container") do %>
                      <%= render partial: "follows/button", locals: { list: @list } %>
                   <% end %>
                <% end %>
              </div>

              <div class="list-description">
              <p><%= @list.description %> </p>
              </div>

              <div class="list-hashtags">
                <p><% @listtags.each do |l| %>
                  <%= l.tag.name %>
                <% end %>
                </p>
              </div>
          </div>
      </div>

