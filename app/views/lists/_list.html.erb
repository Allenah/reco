
        <div class="list-header">
          <div class="list-banner" style="background-image: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url('<%= cl_image_path @list.photo %>')">
          </div>

            <div class="avatar-md avatar-position" style="background-image: url('<%= cl_image_path @list.user.photo %>')">
            </div>

            <div class="list-text-lockup">

              <div class="list-title">
                <h3> <%= @list.name %> </h3>
                <% if user_signed_in? && current_user.id == @list.user.id %>
                  <%= render "lists/editicons" %>
                <% end %>
              </div>

              <div class="list-description">
              <p><%= @list.description %> </p>
              </div>

                <% if user_signed_in? && current_user.id =! @list.user.id %>
                  <%= render "lists/followicon" %>
                <% end %>

              <div class="list-hashtags">
                <p><% @listtags.each do |l| %>
                  <%= l.tag.name %>
                <% end %>
                </p>
              </div>
          </div>
      </div>

