function refreshForm(input) {
  const newCommentForm = document.getElementById('<%="comment-container#{@item.id}" %>');
  newCommentForm.value = input;
}

function addReview(reviewHTML) {
  const comments = document.getElementById('<%="messages-container#{@item.id}" %>');
  comments.insertAdjacentHTML('afterbegin', reviewHTML);
}

<% if @comment.errors.any? %>
  refreshForm('<%= j render "comments/commentform", list: @list, item: @item, comment: @comment %>');
<% else %>
  addReview('<%= j render "comments/comment", list: @list, item: @item, comment: @comment %>');
  refreshForm('');
<% end %>

