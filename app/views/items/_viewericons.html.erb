<div class="item-icons">
  <div class="likes-container">
    <div class="like-but">
      <%= div_for(item, class: "like-but") do %>
      <%= render partial: "likes/buttonlikes", locals: { item: item } %>
      <% end %>
    </div>
    <div id="<%="likes-count#{item.id}"%>">
      <%= item.likes.size %>
    </div>
  </div>
  <div class="list-comment-icon">
   <a data-toggle="collapse" href="<%= "#collapse#{item.id}" %>" role="button" aria-expanded="false" aria-controls="<%="collapse#{item.id}" %>"><i class="far fa-comment"></i></a>
  </div>
  <div id="bm_<%=item.id%>">
  <% if current_user.bookmarked?(item) %>
    <%= link_to list_item_bookmark_path(item.list, item, current_user), remote: true, method: :delete, class: "liked" do %>
      <i class="fas fa-bookmark bookmark-but"></i>
    <% end %>
  <% else %>
    <%= link_to list_item_bookmarks_path(item.list, item, current_user), remote: true, method: :post, 'data-toggle' => "modal", 'data-target' => 'exampleModalLong' do %>
      <i class="fas fa-bookmark bookmark-but"></i>
    <% end %>
  <% end %>
  <div id="exampleModalLong" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content"></div>
    </div>
  </div>
  </div>
</div>

