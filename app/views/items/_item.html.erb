<% @items.each do |i| %>
<div class="col-xs-12">
    <div class="item">

        <div class="item-photo" style="background-image: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url('<%= cl_image_path i.photo %>')">
        </div>
        <div class="item-info">
          <div class="item-details">
            <div class="item-name">
              <%= i.name  %>
            </div>
            <div class="item-description">
              <p><%=i.description%></p>
            </div>
            <div class="item-description">
              <p>COMMENTS HERE</p>
            </div>
            <div class="list-edit-icon">
             <%= link_to edit_list_item_path(i) do %>
              <i class="fas fa-pencil-alt"></i>
              <% end %>
            </div>
            <div class="list-delete-icon">
             <%= link_to list_item_path(i.list, i), method: :delete, data: { confirm: 'Are you sure?' } do %>
                 <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
            <div class="list-check-icon">
             <i class="fas fa-check-square"></i>
            </div>
            <div class="list-comment-icon">
             <i class="far fa-comment"></i>
            </div>
            <div class="list-bookmark-icon">
             <i class="fas fa-bookmark"></i>
            </div>
          </div>
        </div>

    </div>
</div>
<% end %>
