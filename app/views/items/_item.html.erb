<% @items.each do |i| %>
  <div class="col-xs-12">
      <div class="item">

          <div class="item-photo" style="background-image: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url('<%=i.photo ?  cl_image_path(i.photo) : cl_image_path(i.remote_photo) %>')">
          </div>
          <div class="item-info">
            <div class="item-details">
              <div class="item-name">
                <h4><%= i.name  %></h4>
              </div>
              <div class="item-description">
                <p><%=i.description%></p>
              </div>

              <% if user_signed_in? && current_user.id == i.list.user_id %>
                <%= render partial: "items/ownericons", locals: {item: i} %>
              <% else %>
                <%= render partial: "items/viewericons", locals: {item: i} %>
              <% end %>

              <div class="comment-container collapse" id="<%="collapse#{i.id}" %>">
                <%= simple_form_for [@list, i, @comment] do |f| %>
                <%= f.input :description, label: false, placeholder: "Write your comment here..." %>
                <%= f.submit "Add Comment", class: "btn btn-primary btn-sm" %>
                <% end %>
                <% i.comments.each do |c| %>
                <div class="message">
                  <img class="avatar-md" src="<%= cl_image_path c.user.photo %>">
                    <div class="message-body">
                      <span><strong><%= c.user.first_name %></strong>
                        <br>
                        <%= c.description %>
                      </span>
                    </div>
                  </div>
                <% end %>
            </div>
          </div>
      </div>
    </div>
<% end %>

