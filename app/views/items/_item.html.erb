<% @items.each do |i| %>
<div class="col-xs-12">
    <div class="item">

        <div class="item-photo" style="background-image: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url('<%= cl_image_path i.photo %>')">
        </div>
        <div class="item-info">
          <div class="item-details">
            <div class="item-name">
              <%= i.name  %>
            </div>
            <div class="item-description">
              <p><%=i.description%></p>
            </div>
            <div class="item-description">
              <p>COMMENTS HERE</p>
            </div>
          </div>
        </div>

    </div>
</div>
<% end %>
